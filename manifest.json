{
    "manifest_version": 2,
    "name": "Coursera quiz points and ratio",
    "description": "This extension gives you ability to summ points that you gained from quizzes taken and calculate your rate.",
    "version": "1.0",

    "permissions": [
        "activeTab", "https://class.coursera.org/*/quiz", "http://class.coursera.org/*/quiz"
    ],
    "content_scripts": [
        {
            "js": ["libs/jquery-2.1.1.min.js", "libs/underscore-min.js", "build/page.js"],
            "matches": ["https://class.coursera.org/*/quiz", "http://class.coursera.org/*/quiz",
                "https://class.coursera.org/*/assignment", "http://class.coursera.org/*/assignment"],
            "css": ["resources/page.css"]
        }
    ],
    "browser_action": {
        "name": "Click to calculate your score",
        "default_icon": "resources/icon.png",
        "default_popup": "popup.html"
    }
}